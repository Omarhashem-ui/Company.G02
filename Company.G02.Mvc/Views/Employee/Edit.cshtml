@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<br />
<br />

<form asp-action="Edit">
 
    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
      <input asp-for="Name" class="form-control"/>
    
    </div>
     <div class="my-3">
        <label asp-for="Age" class="col-form-label"></label>
      <input asp-for="Age" class="form-control"/>
   
    </div>
     <div class="my-3">
        <label asp-for="Email" class="col-form-label"></label>
      <input asp-for="Email" class="form-control"/>

    </div>
     <div class="my-3">
        <label asp-for="Address" class="col-form-label"></label>
      <input asp-for="Address" class="form-control"/>

    </div>
     <div class="my-3">
        <label asp-for="Phone" class="col-form-label"></label>
      <input asp-for="Phone" class="form-control"/>
  
    </div>
     <div class="my-3">
        <label asp-for="Salary" class="col-form-label"></label>
      <input asp-for="Salary" class="form-control"/>
     
    </div>
     <div class="my-3">       
      <input asp-for="IsActive" class="form-check"/>
   <label asp-for="IsActive" class="col-form-label"></label>
    </div>
     <div class="my-3">
          <input asp-for="IsDeleted" class="form-check"/>
        <label asp-for="IsDeleted" class="col-form-label"></label>
    </div>
     <div class="my-3">
        <label asp-for="HiringDate" class="col-form-label"></label>
      <input asp-for="HiringDate" class="form-control"/>
      <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label"></label>
      <input asp-for="CreateAt" class="form-control"/>
      <span asp-validation-for="CreateAt" class="text-danger" ></span>
    </div>
    <div>
        <input type="submit" value="Save" class="btn btn-warning"/>
        <a asp-action="Index" class="btn btn-light">Back to list </a>
    </div>
</form>