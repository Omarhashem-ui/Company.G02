@model  IEnumerable<Employee>
    @{
    ViewData["Title"] = "Index";
    }

    <h1>All Employee</h1>

    <br />
    <br />

    <form>
        <div class="container m-4">
            <div class="row">
                <div class="col-6">
                     <input id="SearchInput" placeholder="Search By Name" name="SearchInput" class="form-control" />
                </div>
               <div class="col-6">
            <input type="submit" class="btn btn-success" value="search" />
            </div>
            </div>
        </div>
    </form>

    <a asp-action="Create" asp-controller="Employee" class="btn btn-primary">Create Employee</a>

    <br />
    <br />
   @* <div class="m-3 alert alert-danger">
       <p>@ViewData["Massege"]<p/>
   </div> *@
   <div class="m-3 alert alert-danger">
       <p>@ViewBag.Massege<p/>
   </div>
  @if(TempData["success"] != null){
      <div class="m-3 alert alert-success">
            <p>@TempData["success"]<p/>
      </div> 
  }

    @if (Model.Count()> 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <td>Name</td>
                <td>Age</td>
                <td>Email</td>
                <td>Address</td>
                <td>Phone</td>
                <td>Salary</td>
                <td>Is Active</td>
                <td>Is Deleted</td>
                <td>Department</td>
                <td>@Html.DisplayNameFor(E=>E.HiringDate)</td>
                <td>@Html.DisplayNameFor(E=>E.CreateAt)</td>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th>@item.Name</th>
                <th>@item.Age</th>
                <th>@item.Email</th>
                <th>@item.Address</th>
                <th>@item.Phone</th>
                <th>@item.Salary</th>
                <th>@item.IsActive</th>
                <th>@item.IsDeleted</th>
                @{
                    if(item.Department != null)
                    {
                        <th>@item.Department.Name</th>
                    }
                    else
                    {
                        <th> No Department </th>
                    }
                }
                <th>@item.HiringDate</th>
                <th>@item.CreateAt</th>
            <partial name="_EmpDeptView" model="@item.Id" />
            </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-s">
        <h4>
            There Are No Employee :(
        </h4>
    </div>
}


